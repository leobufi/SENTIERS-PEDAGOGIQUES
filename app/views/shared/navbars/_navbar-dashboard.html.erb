<div class="navbar navbar-expand-sm" data-controller="mobile-nav">
  <%= link_to root_path, class: "navbar-logo" do %>
    <%= image_tag "logo.png" %>
  <% end %>
  <div class="mobile-nav-buttons_wrapper">
    <i class="fa-solid fa-arrow-right" data-mobile-nav-target="burger" data-action="click->mobile-nav#activate" ></i>
    <span class="poppins-semibold" data-action="click->mobile-nav#activate">Menu</span>
    <i class="fa-solid fa-xmark" data-mobile-nav-target="cross" data-action="click->mobile-nav#activate"></i>
  </div>
  <div class="collapse navbar-collapse" data-mobile-nav-target="menu">
    <ul class="navbar-nav" data-controller="navbar">
      <li class="nav-item poppins-medium" data-action="mouseleave->navbar#removeDropright">
          <span class="nav-link gray" data-navbar-target="link" data-action="mouseover->navbar#dropright">
            <i class="fa-solid fa-arrow-right"></i>
            Menu du site
          </span>
        <div class="nav-dropright-menu" data-navbar-target="dropright">
          <%= link_to "Itinéraires", sentiers_path, class:"nav-link" %>
          <%= link_to "Thèmes", themes_sentiers_path, class:"nav-link" %>
          <%= link_to "Engagements", engagements_path, class:"nav-link" %>
          <%= link_to "Découverte", decouvertes_path, class:"nav-link" %>
          <%= link_to "Contact", new_contact_path, class:"nav-link" %>
          <% if user_signed_in? && current_user.admin?%>
            <%= link_to "Tableau de bord", dashboard_path, class: "nav-link" %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          <% end %>
        </div>
      </li>
      <li class="nav-item">
        <%= link_to dashboard_sentiers_path do %>
          <span class="nav-link" data-navbar-target="title" id="sentiers">
            Mes sentiers
          </span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to dashboard_points_path do %>
          <span class="nav-link" data-navbar-target="title" id="points">
            Mes Points d'interêt
          </span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to dashboard_decouverte_path do %>
          <span class="nav-link" data-navbar-target="title" id="decouverte">
            Page Découverte
          </span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to dashboard_engagement_path do %>
          <span class="nav-link" data-navbar-target="title" id="engagements">
            Page Engagements
          </span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to dashboard_generals_path do %>
          <span class="nav-link" data-navbar-target="title" id="generals">
            Généralités
          </span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to dashboard_qr_codes_path do %>
          <span class="nav-link" data-navbar-target="title" id="qrcode">
            Générateur de QR Codes
          </span>
        <% end %>
      </li>
      <li class="nav-item">
        <% if user_signed_in? && current_user.admin?%>
          <%= link_to "Se déconnecter", destroy_user_session_path, class: "nav-link", data: {turbo_method: :delete} %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
