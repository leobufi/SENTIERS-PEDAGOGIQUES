<div class="page-main">
  <div class="page-padding no-padding">
    <section class="static-pages">
      <div class="static-pages_wrapper">
        <% @decouvertes.each  do |decouverte| %>
          <div class="static_wrapper active" data-tabs-target="panel" data-tab-name="circuits accompagnés">
            <div class="static-image">
              <%= cl_image_tag decouverte.circuit_acc_img.key, crop: :fit %>
            </div>
            <div class="static-infos">
              <h4>Circuits accompagnés</h4>
              <%= decouverte.circuit_acc_text %>
            </div>
          </div>
          <div class="static_wrapper" data-tabs-target="panel" data-tab-name="animation scolaire">
            <div class="static-image">
              <%= cl_image_tag decouverte.anim_scol_img.key, crop: :fit %>
            </div>
            <div class="static-infos">
              <h4>Animation scolaire</h4>
              <%= decouverte.anim_scol_text %>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
