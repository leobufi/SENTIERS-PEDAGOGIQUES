<div class="page-main">
  <div class="page-padding">
    <section class="dashboard">
      <div class="dashboard-wrapper">
        <div class="title-wrapper">
          <h1 class="large">Mes Points d'interêt</h1>
          <button>
            <%= link_to 'Créer un nouveau point dinterêt', new_point_path %>
          </button>
        </div>
        <div class="content-wrapper">
          <% @points.sort.each do |point| %>
            <div class="content">
              <div class="content-infos">
                <%= link_to point_path(point) do %>
                  <h4><%= point.title %></h4>
                <% end %>
                  <p><%= sanitize("#{point.infos}".truncate(150)) %></p>
              </div>
              <div class="content-links">
                <button>
                  <%= link_to 'Modifier le point', edit_point_path(point) %>
                </button>
                <button>
                  <%= link_to "Supprimer le point", point_path(point), data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?"}%>
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
