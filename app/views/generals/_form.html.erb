<div class="page-main">
  <div class="page-padding">
    <section class="dashboard">
      <div class="dashboard-wrapper">
        <h1 class="large">Modifier généralités </h1>
        <div class="form-wrapper">
          <div class="form">
            <%= simple_form_for @general do |f| %>
              <div class="form-bloc">
                <span class="large poppins-semibold">
                  Texte de présentation
                </span>
                <%= f.input :general_pres, as: :text, label: false %>
              </div>
              <div class="form-bloc">
                <span class="large poppins-semibold">
                  Image de couverture de la page daccueil
                </span>
                <%= f.input :home_img, label:false %>
              </div>
              <button>
                <%= f.button :submit, "Créer/Modifier" %>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
